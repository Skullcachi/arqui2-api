<div class="container p-4">
    <div class="row">
        <div class="col-md-12 mx-auto text-center">
            <h1>Proyecto de Arquitectura del Computador 2</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/dashboard/setDiameter" method="post">
                        <div class="input-group col-md-6 mx-auto">
                            <input type="int" class="form-control" name="diameter" id="diameter" placeholder="Diámetro de la llanta" autofocus>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-success">Guardar</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto p-4">
            <div class="card">
                <div class="card-body">
                    <form action="#">
                        <div class="input-group col-md-6 mx-auto text-center p-4">
                            <input type="int" class="form-control" name="diameter" id="diameter" placeholder="Diámetro de la llanta" autofocus>
                        </div>
                        <div class="input-group col-md-6 mx-auto text-center p-4">
                            <input type="int" class="form-control" name="minVelocity" id="minVelocity" placeholder="Velocidad mínima" >
                        </div>
                        <div class="input-group col-md-6 mx-auto text-center p-4">
                            <input type="int" class="form-control" name="maxVelocity" id="maxVelocity" placeholder="Velocidad máxima" >
                        </div>
                        <div class="input-group col-md-6 mx-auto text-center p-4">
                            <input type="int" class="form-control" name="averageVelocity" id="averageVelocity" placeholder="Velocidad promedio" >
                        </div>
                        <div class="input-group col-md-6 mx-auto text-center p-4">
                            <input type="int" class="form-control" name="rpm" id="rpm" placeholder="Vueltas por minuto" >
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto p-4">
            <div class="card">
                <div class="card-body  mx-auto text-center">
                    <div class="row">
                        <div class="col-md-12 p-4">
                            <form action="/dashboard/truncate" method="get">
                                <button class="btn btn-danger">TRUNCATE</button>
                            </form>
                        </div>
                    </div>
                    <table class="table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>DATO</th>
                            </tr>
                        </thead>
                        <tbody>                            
                            {{#each datos}}
                            <tr>
                                <td class="p-2">{{id}}</td>
                                <td class="p-2">{{dato}}</td>
                            </tr>
                            {{else}}
                            <h3>No hay datos para mostrar</h3>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>